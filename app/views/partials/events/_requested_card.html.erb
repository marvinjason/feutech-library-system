<div class="event">
  <div class="label">
    <%= image_tag avatar_url %>
  </div>

  <div class="content">
    <div class="date">
      <%= time_ago_in_words(created_at) %> ago
    </div>

    <div class="summary">
        <a><%= requester_name %></a> requested to reserve <%= link_to book.title, book %>
    </div>

    <div class="extra images">
      <div class="ui card">
        <div class="content">
          <% if status == 'approved' %>
            <i class="right floated green check icon"></i>
          <% elsif status == 'rejected' %>
            <i class="right floated red remove icon"></i>
          <% end %>

          <div class="header">
            <%= request_start %> &ndash; <%= request_end %>
          </div>

          <div class="meta no-margin bottom-margin-1">
            loan for <%= duration %>
          </div>

          <% if status == 'pending' %>
            <div class="ui two buttons">
              <%= link_to approve_path(reservation_id), method: :post, class: 'ui basic green button' do %>
                <i class="check icon"></i>
                Approve
              <% end %>

              <%= link_to reject_path(reservation_id), method: :post, class: 'ui basic red button' do %>
                <i class="remove icon"></i>
                Decline
              <% end %>
            </div>
          <% else %>
            <div class="ui two buttons">
              <%= link_to approve_path(reservation_id), method: :post, class: 'ui basic green disabled button' do %>
                <i class="check icon"></i>
                Approve
              <% end %>

              <%= link_to reject_path(reservation_id), method: :post, class: 'ui basic red disabled button' do %>
                <i class="remove icon"></i>
                Decline
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
