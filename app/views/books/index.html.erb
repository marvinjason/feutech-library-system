<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Publication address</th>
      <th>Publication year</th>
      <th>Description</th>
      <th>Edition</th>
      <th>Series</th>
      <th>Isbn</th>
      <th>Call number</th>
      <th>Language</th>
      <th>Page count</th>
      <th>Book format</th>
      <th>Cover</th>
      <th>Total count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.publisher %></td>
        <td><%= book.publication_address %></td>
        <td><%= book.publication_year %></td>
        <td><%= book.description %></td>
        <td><%= book.edition %></td>
        <td><%= book.series %></td>
        <td><%= book.isbn %></td>
        <td><%= book.call_number %></td>
        <td><%= book.language %></td>
        <td><%= book.page_count %></td>
        <td><%= book.book_format %></td>
        <td><%= book.cover %></td>
        <td><%= book.total_count %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

