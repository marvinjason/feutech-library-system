<% if false %>
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>

<section class="container">
  <div class="left-half"> 
    <div class="bg">
      <h1 float:left>Library System</h1><br><br>
      <h1>Borrow &amp; Reserve</h1><br><br>
      <h1>Books.</h1>
    </div>      
  </div>

  <div class="right-half">        
    <center>
      <%= image_tag 'lib.png', size: '200x80', style: 'margin-top: 5%' %>
      <h1>Welcome</h1>
      <h3>log in with your account</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= image_tag 'uname.png', align: 'middle' %>&nbsp;
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email' %>
        <br><br>

        <%= image_tag 'pass.png', align: 'middle' %>&nbsp;
        <%= f.password_field :password, autocomplete: "off", placeholder: 'password' %>
        <br><br>

        <%= f.submit "Sign in" %>
      <% end %>

      <br>
      or
      <br>

      <%= link_to user_facebook_omniauth_authorize_path, class: 'fb btn' do %>
        <i class="fa fa-facebook fa-fw"></i>
      <% end %>

      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      
      <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'google btn' do %>
        <i class="fa fa-google fa-fw"></i>
      <% end %>

      <p>Don't have an account? <%= link_to 'Register Now', new_user_registration_path %></p>
    </center>
  </div>
</section>