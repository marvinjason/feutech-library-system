<div class="ui form">
  <%= form_tag search_users_path do %>
    <div class="inline field">
      <select class="ui dropdown" name="column">
        <option value="last_name">Last Name</option>
        <option value="first_name">First Name</option>
        <option value="email">Email</option>
      </select>

      <div class="ui icon input">
        <input type="text" name="search" placeholder="Search" align="bottom">

        <button class="circular ui icon button left-margin-1">
          <i class="search icon"></i>
        </button>
      </div>
    </div>
  <% end %>
</div>

<table class="ui fixed compact table">
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td>
          <% if false %>
          <%= link_to edit_admin_user_path(user), class: 'circular ui icon button' do %>
            <i class="edit icon"></i>
          <% end %>
          <% end %>

          <%= link_to admin_user_path(user), method: :delete, class: 'circular ui icon button', data: {confirm: 'Are you sure you want to proceed?'} do %>
            <i class="trash icon"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="ui pagination menu">
  <%= link_to admin_users_path(page: @previous_page), class: 'icon item center' do %>
    <i class="left arrow icon"></i>
  <% end %>

  <% @page_count.times do |i| %>
    <%= link_to "#{i + 1}", admin_users_path(page: i + 1), class: "item #{'active' if @current_page - 1 == i}" %>
  <% end %>

  <%= link_to admin_users_path(page: @next_page), class: 'icon item center' do %>
    <i class="right arrow icon"></i>
  <% end %>
</div>

<% if false %>
<%= link_to new_admin_user_path, class: 'ui right floated blue button' do %>
  <i class="plus icon"></i>
  New
<% end %>
<% end %>