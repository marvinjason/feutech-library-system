<h2 class="ui header">Edit Book</h2>

<div class="ui form">
  <%= form_for @book, url: admin_book_path do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title, required: true %>
    </div>

    <div class="field">
      <label>Description</label>
      <%= f.text_area :description, required: true %>
    </div>

    <div class="field">
      <label>Edition</label>
      <%= f.text_field :edition, required: true %>
    </div>

    <div class="field">
      <label>Series</label>
      <%= f.text_field :series %>
    </div>

    <div class="field">
      <label>ISBN</label>
      <%= f.text_field :isbn, required: true %>
    </div>

    <div class="field">
      <label>Call Number</label>
      <%= f.text_field :call_number, required: true %>
    </div>

    <div class="field">
      <label>Language</label>
      <%= f.text_field :language, required: true %>
    </div>

    <div class="field">
      <label>Page Count</label>
      <%= f.number_field :page_count, required: true %>
    </div>

    <div class="field">
      <label>Book Format</label>
      <%= f.text_field :book_format, required: true %>
    </div>

    <div class="field">
      <label>Number of Copies</label>
      <%= f.number_field :total_count, required: true %>
    </div>

    <div class="field">
      <label>Publisher</label>
      <%= f.collection_select :publisher_id, Publisher.all, :id, :name, required: true %>
    </div>

    <div class="field">
      <label>Publication Address</label>
      <%= f.text_field :publication_address, required: true %>
    </div>

    <div class="field">
      <label>Publication Year</label>
      <%= f.number_field :publication_year, required: true %>
    </div>

    <div class="field">
      <label>Authors</label>
      <%= f.collection_select :author_ids, Author.all, :id, :first_name, {}, {multiple: true, class: 'ui fluid dropdown'} %>
    </div>

    <div class="field">
      <label>Book Cover</label>

      <%= f.file_field :cover, id: 'file-upload', class: 'inputfile' %>

      <label for="file-upload" class="ui button">
        <i class="ui upload icon"></i> 
        Upload image
      </label>
    </div>

    <%= link_to 'Cancel', admin_books_path, class: 'ui right floated submit button' %>
    <%= f.submit 'Submit', class: 'ui right floated green button' %>
  <% end %>
</div>

<br>
