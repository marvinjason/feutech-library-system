<h2 class="ui header">New Author</h2>

<div class="ui form">
  <%= form_for @author, url: admin_authors_path do |f| %>
    <div class="fields">
      <div class="field">
        <label>First name</label>
        <%= f.text_field :first_name, placeholder: 'First Name', required: true %>
      </div>

      <div class="field">
        <label>Last name</label>
        <%= f.text_field :last_name, placeholder: 'Last Name', required: true %>
      </div>
    </div>

    <div class="field">
      <label>Description</label>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <label>Avatar</label>

      <%= f.file_field :avatar, id: 'file-upload', class: 'inputfile' %>

      <label for="file-upload" class="ui button">
        <i class="ui upload icon"></i> 
        Upload image
      </label>
    </div>

    <%= f.submit 'Create', class: 'ui submit button' %>
  <% end %>
</div>
